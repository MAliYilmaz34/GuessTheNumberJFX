<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.numberguessinggame.RegisterController"
      alignment="CENTER" spacing="20" styleClass="root-pane">
    <Text text="Create Account" styleClass="title-text"/>
    <TextField fx:id="newUsernameField" promptText="Username" maxWidth="200"/>
    <PasswordField fx:id="newPasswordField" promptText="Password" maxWidth="200"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" maxWidth="200"/>
    <Label fx:id="messageLabel" styleClass="message-label"/>
    <HBox spacing="10" alignment="CENTER">
        <Button text="Register" onAction="#handleRegisterButtonAction" styleClass="button-primary"/>
        <Button text="Back to Login" onAction="#handleBackButtonAction" styleClass="button-secondary"/>
    </HBox>
</VBox>